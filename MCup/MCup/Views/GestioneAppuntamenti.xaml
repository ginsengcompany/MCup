<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:costomControls="clr-namespace:MCup.CostomControls;assembly=MCup"
             x:Class="MCup.Views.GestioneAppuntamenti" 
             BackgroundColor="White"
             Title="Appuntamenti">
    <ContentPage.Content>
        <StackLayout Padding="15">

            <StackLayout VerticalOptions="FillAndExpand">
                <ListView 
                Margin="1"
                ItemsSource="{Binding Appunt}" 
                BackgroundColor="White" 
                HasUnevenRows="True"  
                IsVisible="{Binding Visible}" 
                SeparatorVisibility="Default"  
                SeparatorColor="Black">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <costomControls:ExtendedViewCell SelectedBackgroundColor="White" >
                                <ViewCell.View>
                                    <StackLayout>

                                        <StackLayout HorizontalOptions="FillAndExpand"  
                                                         VerticalOptions="Start"
                                                         BackgroundColor="Red"
                                                         Margin="0,10,0,0">
                                            <Label 
                                                       Text="{Binding desprest}" 
                                                       HorizontalOptions="CenterAndExpand" 
                                                       HorizontalTextAlignment="Center" 
                                                       TextColor="White" 
                                                       FontSize="Medium"
                                                       FontAttributes="Bold"/>
                                        </StackLayout>
                                        <StackLayout >

                                            <StackLayout 
                                                        Orientation="Vertical"  HorizontalOptions="Center"
                                                        VerticalOptions="Center">
                                                <Label 
                                                            TextColor="Red" 
                                                            Text="Struttura" 
                                                            Margin="9,0,0,0" 
                                                            FontAttributes="Bold" 
                                                            HorizontalOptions="Center" 
                                                            FontSize="Medium"/>
                                                <Label 
                                                            Text="{Binding reparti[0].nomeStruttura}" 
                                                            HorizontalOptions="Center" 
                                                            TextColor="Black" 
                                                            FontSize="Medium" 
                                                            FontAttributes="Bold"/>
                                                <Label Margin="9,0,0,0" 
                                                               TextColor="Red" 
                                                               FontAttributes="Bold" 
                                                               HorizontalTextAlignment="Center" 
                                                               Text="Data Appuntamento" 
                                                               HorizontalOptions="Center" 
                                                               FontSize="Medium"/>
                                                <Label  
                                                            Text="{Binding dataAppuntamento}" 
                                                            HorizontalOptions="Center" 
                                                            TextColor="Black" 
                                                            FontAttributes="Bold"
                                                            FontSize="Medium"/>
                                                <Label Margin="9,0,0,0" 
                                                               TextColor="Red" 
                                                               FontAttributes="Bold"
                                                               HorizontalTextAlignment="Center" 
                                                               HorizontalOptions="Center" 
                                                               Text="Ora Appuntamento" 
                                                               FontSize="Medium"/>
                                                <Label 
                                                            Text="{Binding oraAppuntamento}" 
                                                            HorizontalOptions="Center" 
                                                            TextColor="Black" 
                                                            FontAttributes="Bold"
                                                            FontSize="Medium"/>
                                                <Label Margin="9,0,0,0"
                                                            Text="Nome del medico per la visita:" 
                                                            TextColor="Red"
                                                            FontAttributes="Bold"
                                                            HorizontalTextAlignment="Center" 
                                                            HorizontalOptions="Center"
                                                            FontSize="Medium"/>
                                                <Label 
                                                            Text="{Binding reparti[0].nomeMedico}" 
                                                            TextColor="Black" 
                                                            HorizontalOptions="Center" 
                                                            FontSize="Medium" 
                                                            FontAttributes="Bold"/>

                                                <Grid HorizontalOptions="Center">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                    </Grid.RowDefinitions>

                                                    <StackLayout HorizontalOptions="Center" Grid.Row="0" >
                                                        <Label 
                                                            Text="Ubicazione reparto:" 
                                                            TextColor="Red" 
                                                            FontAttributes="Bold"
                                                            HorizontalTextAlignment="Center"
                                                            FontSize="Medium"/>

                                                    </StackLayout>
                                                    <StackLayout 
                                                                 Orientation="Horizontal" 
                                                                 Grid.Row="1"
                                                                 HorizontalOptions="Center">

                                                        <StackLayout
                                                                HorizontalOptions="Center"
                                                            Orientation="Horizontal">
                                                            <Label 
                                                                    Text="{Binding reparti[0].ubicazioneReparto}" 
                                                                    TextColor="Black" 
                                                                    FontSize="Medium" 
                                                                    FontAttributes="Bold"/>
                                                            <Image Source="luogo.png"
                                                                       VerticalOptions="Center"
                                                                       IsVisible="{Binding reparti[0].visibile}" 
                                                                       HeightRequest="50" 
                                                                       >
                                                                <Image.GestureRecognizers>
                                                                    <TapGestureRecognizer 
                                                                            Command="{Binding LuogoUbicazioneReparto}"
                                                                            CommandParameter="{Binding reparti[0]}"/>
                                                                </Image.GestureRecognizers>
                                                            </Image>
                                                        </StackLayout>
                                                    </StackLayout>
                                                </Grid>
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell.View>
                            </costomControls:ExtendedViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout 
                    Padding="10" 
                    VerticalOptions="End" Orientation="Horizontal" HorizontalOptions="Center">
                    <Button
                        Command="{Binding SpostaAppuntamento}"
                        Text="Sposta Appuntamento"
                        TextColor="Red"/>
                    <Button 
                        Command="{Binding EliminaAppuntamento}"
                        Text="Elimina Appuntamento" 
                        TextColor="Red"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
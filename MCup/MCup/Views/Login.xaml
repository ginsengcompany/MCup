<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
    x:Class="MCup.Views.Login"
    Title="Login"
             BackgroundColor="#003964">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="10" Padding="0,0,0,20">
            <StackLayout Orientation="Vertical" >
                <Frame BackgroundColor="White" 
                       Margin="50,0,50,0"
                       CornerRadius="10">
                    <Image Source="{Binding LogoStruttura}"       
                           HorizontalOptions="FillAndExpand"
                           HeightRequest="100"
                           WidthRequest="100"
                           VerticalOptions="FillAndExpand"/>
                </Frame>

                <Grid HorizontalOptions="Center" Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
               
                        <Image Source="user_login.png" VerticalOptions="Center" Grid.Column="0" Grid.Row="0" HeightRequest="50"/>
                        <xfx:XfxEntry 
                            x:Name="entryCodFis"
                            Grid.Column="1" Grid.Row="0"
                            Placeholder="Inserire Username"     
                            PlaceholderColor="White"   
                            Text="{Binding Username}" 
                            ErrorText="{Binding NameErrorText}" 
                            ErrorDisplay="Underline"
                            TextColor="White"
                            WidthRequest="250"
                            VerticalOptions="Center"/>

                    <Image Source="pass_login.png" VerticalOptions="Center" Grid.Column="0" Grid.Row="1" HeightRequest="50"/>
                        <xfx:XfxEntry 
                            Text="{Binding passWord}" 
                            Placeholder="Inserire Password" 
                            Grid.Column="1" Grid.Row="1"
                            PlaceholderColor="White" 
                            TextColor="White"
                            ErrorText="{Binding NameErrorTextPassword}" 
                            ErrorDisplay="Underline"
                            IsPassword="{Binding ShowPassword}"
                            VerticalOptions="Center"
                            WidthRequest="250">
                        </xfx:XfxEntry>
                    <Image Source="{Binding ShowPasswordImage}" HorizontalOptions="Start" VerticalOptions="Center" Grid.Column="2" Grid.Row="1">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding showPass}"></TapGestureRecognizer>
                            </Image.GestureRecognizers>
                        </Image>
                </Grid>
               
                <StackLayout Padding="75,0,75,0">
                    <Button Text="LOGIN" IsEnabled="{Binding IsEnabled}" IsVisible="{Binding LoginIsVisible}" 
                            TextColor="White" FontSize="Medium" FontAttributes="Bold" BackgroundColor="#0971B2"  BorderRadius="20"  BorderWidth="3" Command="{Binding effettuaLogin}"/>
                   <!-- <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <Label Text="Resta connesso"  FontSize="Small" HorizontalOptions="Center" Grid.Column="0" TextColor="Black"/>
                            <Switch Toggled="Switch_OnToggled" HorizontalOptions="Center" Grid.Column="1"></Switch>
                        </Grid>
                      
                    </StackLayout>-->
                    <Label Text="Registrati" IsVisible="{Binding SignupIsVisible}" TextColor="#0971B2" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Center" Margin="10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="vaiRegistrazione" NumberOfTapsRequired="1"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                    <ActivityIndicator Color="Red" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsVisible}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

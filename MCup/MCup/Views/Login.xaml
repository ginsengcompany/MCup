<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
    x:Class="MCup.Views.Login"
    Title="Login"
    BackgroundImage="sfondo.png">
	<ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" >
            <StackLayout Orientation="Vertical" Padding="0,50,0,0" >
                <Image Source="log.png" HorizontalOptions="Center"/>
            </StackLayout>
          
        <StackLayout Orientation="Vertical" 
                     Padding="40">
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center">
                        <Image Source="profilo.png"/>
                        <xfx:XfxEntry 
                            x:Name="entryCodFis"
                            Placeholder="Inserire Codice Fiscale"     
                            PlaceholderColor="Red"   
                            Text="{Binding codiceFiscale}" 
                            ErrorText="{Binding NameErrorText}" 
                            ErrorDisplay="Underline"
                            WidthRequest="250"
                            HorizontalOptions="Center" 
                            VerticalOptions="Center"/>
                    </StackLayout>
                <StackLayout  Orientation="Horizontal"
                              HorizontalOptions="Center">
                    <Image Source="password.png"/>
                    <xfx:XfxEntry  
                        Text="{Binding passWord}" 
                        Placeholder="Inserire Password" 
                        PlaceholderColor="Red" 
                        TextColor="Black"
                        ErrorText="{Binding NameErrorTextPassword}" 
                        ErrorDisplay="Underline"
                        IsPassword="True"
                        FontAttributes="Italic" 
                        HorizontalOptions="Center" 
                        WidthRequest="250"/>
            </StackLayout>
        </StackLayout>
                <StackLayout >
                <Button Text="Login" TextColor="White" BackgroundColor="Red" BorderRadius="5" HorizontalOptions="Center" Command="{Binding effettuaLogin}"/>
                <Label Text="Crea un Account" TextColor="Red" FontSize="Medium" FontAttributes="Italic" HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="vaiRegistrazione" NumberOfTapsRequired="1"></TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            
            <ActivityIndicator Color="Red" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsVisible}" />
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

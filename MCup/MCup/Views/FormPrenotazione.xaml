<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MCup"
             x:Class="MCup.Views.FormPrenotazione">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20,50,20,0" BackgroundColor="White">
            <Label Text="NOME" BackgroundColor="White" TextColor="Black" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold"/>
            <Entry Text="{Binding nomeUtente}" Placeholder="Inserisci il nome" TextColor="Black" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
            <Label Text="COGNOME" BackgroundColor="White" TextColor="Black" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold"/>
            <Entry Text="{Binding cognomeUtente}" Placeholder="Inserisci il cognome" TextColor="Black" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
            <Grid>
                
            <StackLayout Orientation="Horizontal" Padding="0,10,0,0" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center">

                    <StackLayout BackgroundColor="White" Grid.Column="0" VerticalOptions="Center">
                <Entry Text="{Binding codicefiscaleUtente}" x:Name="entryCodiceFiscale" Placeholder="Inserisci il codice fiscale" WidthRequest="250" 
                       FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                <StackLayout BackgroundColor="White" Grid.Column="1">
                <Image Source="scan.png">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Button_Clicked" NumberOfTapsRequired="1"/>
                            </Image.GestureRecognizers>
                    </Image>
                    </StackLayout>
            </StackLayout>
                </Grid>
            <Grid>
            <StackLayout Orientation="Horizontal" Padding="0,10,0,0" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center">
            <StackLayout BackgroundColor="White" Grid.Column="0" VerticalOptions="Center">
                    <Entry Text="{Binding codiceUno}" x:Name="entryCodiceRicettaUno" Placeholder="Inserisci il 1° codice ricetta" WidthRequest="250" 
                       FontAttributes="Italic" />
                        </StackLayout>
                    <StackLayout BackgroundColor="White" Grid.Column="0" VerticalOptions="Center">
                <Image Source="scan.png">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Button_Clicked" NumberOfTapsRequired="1"/>
                            </Image.GestureRecognizers>
                    </Image>
                        </StackLayout>
            </StackLayout>
                </Grid>
            <Grid>
            <StackLayout Orientation="Horizontal" Padding="0,10,0,0" BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center">
                    <StackLayout BackgroundColor="White" Grid.Column="0" VerticalOptions="Center">
                <Entry Text="{Binding codiceDue}" x:Name="entryCodiceRicettaDue" Placeholder="Inserisci il 2° codice ricetta" WidthRequest="250"
                       FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    <StackLayout BackgroundColor="White" Grid.Column="0" VerticalOptions="Center">
                <Image Source="scan.png">
                        <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Button_Clicked" NumberOfTapsRequired="1"/>
                            </Image.GestureRecognizers>
                    </Image>
                        </StackLayout>
            </StackLayout>
                </Grid>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Padding="0,30,0,0" BackgroundColor="White">
                <Image Source="send.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding InviaRichiesta}" NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MCup.Views.PropostaRichiesta"
    xmlns:local="clr-namespace:MCup"
    xmlns:customControls="clr-namespace:MCup.CostomControls;assembly=MCup"
    BackgroundColor="White"
    Title="Richiesta proposta">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="white">
            <ActivityIndicator IsVisible="{Binding IsVisible}" IsRunning="{Binding IsBusy}"/>
            <ListView BackgroundColor="White" HasUnevenRows="true" HorizontalOptions="Center" VerticalOptions="FillAndExpand" x:Name="lst" ItemsSource="{Binding ListPrenotazioni}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <customControls:ExtendedViewCell SelectedBackgroundColor="White">
                                <ViewCell.View>
                                    <StackLayout Orientation="Vertical" x:Name="Item">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2.5*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                     <StackLayout Grid.Column="0">
                                        <StackLayout Orientation="Vertical" >
                                        <Label Text="Prestazione" TextColor="Red" VerticalOptions="Start"></Label>
                                        <Label Text="{Binding descPrestazione}" TextColor="Black" VerticalOptions="End" FontSize="Medium"  FontAttributes="Italic"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical">
                                        <Label Text="Reparto:" TextColor="Red"  VerticalOptions="Start" />
                                        <Label Text="{Binding descReparto}" TextColor="Black" VerticalOptions="End" FontSize="Medium" FontAttributes="Italic"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Data dell'appuntamento:" TextColor="Red" VerticalOptions="Start" />
                                        <Label Text="{Binding dataAppuntamento}" TextColor="Black" VerticalOptions="End" FontSize="Medium" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontAttributes="Italic"/>
                                    </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                        <Label Text="Orario dell'appuntamento:" TextColor="Red" VerticalOptions="Start" />
                                        <Label Text="{Binding oraAppuntamento}" VerticalOptions="End" TextColor="Black" FontSize="Medium" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontAttributes="Italic"/>
                                    </StackLayout>
                                        </StackLayout>
                                        <Button Text="Prossima data" 
                                                TextColor="White" 
                                                BackgroundColor="#ff0000" 
                                                Grid.Column="1" 
                                                HeightRequest="80" 
                                                VerticalOptions="Center" 
                                                BindingContext="{Binding Source={x:Reference lst}, Path=BindingContext}" 
                                                Command="{Binding cambiaData}" 
                                                CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"/>
                                        </Grid>
                                        </StackLayout>
                                </ViewCell.View>
                            </customControls:ExtendedViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackLayout BackgroundColor="White" VerticalOptions="End">
                <Button Text="Conferma Prenotazione" BackgroundColor="Red" TextColor="White" IsVisible="{Binding IsVisibleButton}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

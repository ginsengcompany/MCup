<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCup.Views.Termini"
             Title="Termini e condizioni">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Label Text="Termini" TextColor="Black" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </ScrollView>
            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="5" HeightRequest="50" VerticalOptions="End">
                <StackLayout Spacing="0" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="StartAndExpand" Padding="20,0,0,0">
                    <Button Text="Accetta" BackgroundColor="#2296f3" BorderRadius="15" TextColor="White"  BorderWidth="1" Clicked="Button_Clicked"/>
                </StackLayout>
                <StackLayout Spacing="0"  BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="EndAndExpand" Padding="0,0,20,0">
                    <Button Text="Declina" BackgroundColor="#2296f3" BorderRadius="20" TextColor="White"  BorderWidth="1"/>
            </StackLayout>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>